// =====================================================================
// CONFIGURACIÓN
// =====================================================================

generator client {
  provider = "prisma-client-js"
  // IMPORTANTE: Dejamos esto comentado para que use la ruta estándar (node_modules).
  // Esto soluciona el error: "@prisma/client did not initialize yet"
  // output   = "../generated/prisma/client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// =====================================================================
// MODELOS DE NEGOCIO (PRODUCTOS Y VENDEDORES)
// =====================================================================

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  price       Float
  category    String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relación con el Vendedor
  sellerId    String   @db.ObjectId
  seller      Seller   @relation(fields: [sellerId], references: [id])

  // Relación con Reviews (Soluciona problemas de relaciones inversas)
  reviews     Review[]

  // Relación con CartItems (Para saber en qué carritos está este producto)
  cartItems   CartItem[]

  @@map("products")
}

model Seller {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  bio          String?
  profileImage String
  heroBanner   String
  category     String
  email        String

  // Relación con Productos
  products     Product[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("sellers")
}

/**
 * Review model - ratings and comments for products
 * Soluciona el error: "Cannot read properties of undefined (reading 'findMany')"
 */
model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relación con User
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relación con Product
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

// =====================================================================
// MODELOS DE AUTENTICACIÓN (NextAuth.js)
// =====================================================================

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(USER)

  // Relaciones
  accounts      Account[]
  sessions      Session[]
  
  // Soluciona el error: "Invalid invocation... include: { cart: ... }"
  cart          Cart?
  
  reviews       Review[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

enum Role {
  USER
  ADMIN
  SELLER
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// =====================================================================
// MODELOS DE E-COMMERCE (CARRITO)
// =====================================================================

model Cart {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  userId    String     @unique @db.ObjectId
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  items     CartItem[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("carts")
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  
  // Relación con el Carrito
  cartId    String   @db.ObjectId
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  
  // Relación con el Producto
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  quantity  Int      @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("cart_items")
}